---
import { useTranslations } from "../lib/i18n";
import Avatar from "../assets/avatar.jpg";

interface Props {
    lang: "zh-cn" | "en";
    totalPosts?: number;
    popularTags?: Array<{ tag: string; count: number }>;
}

const { lang, totalPosts = 42, popularTags = [] } = Astro.props;
const t = useTranslations(lang);

const joinedDate = lang === "zh-cn" ? "2018年5月" : "May 2018";
const currentLangPrefix = lang === "zh-cn" ? "/zh-cn" : `/${lang}`;

---

<div class="space-y-6 lg:sticky lg:top-6">
    {/* Author Profile */}
    <div class="paper-card">
        <div class="p-4 sm:p-6 text-center">
          
               <img
                        src={Avatar.src}
                        alt={t("author.name")}
                class="w-16 h-16 sm:w-24 sm:h-24 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-3 sm:mb-4 floating-element"
                    />
            <h3 class="text-lg sm:text-xl font-bold text-foreground mb-2 handwriting">
                {t("author.name")}
            </h3>
            <p class="text-muted-foreground text-xs sm:text-sm mb-3 sm:mb-4">
                {t("author.description")}
            </p>
            <div class="flex items-center justify-center gap-3 mb-3 sm:mb-4">
                <a
                    href="https://github.com/logyxiao"
                    class="text-muted-foreground hover:text-foreground transition-colors p-2"
                >
                    <svg
                        class="h-4 w-4"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                        ></path>
                    </svg>
                </a>
            </div>
            <a
                href={`${currentLangPrefix}/about`}
                class="inline-flex items-center justify-center rounded-md text-xs sm:text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-8 sm:h-9 px-3 w-full"
            >
                {t("author.learnMore")}
            </a>
        </div>
    </div>

    {/* Stats */}
    <div class="paper-card">
        <div class="p-4 sm:p-6">
            <h4 class="font-semibold text-foreground mb-3 sm:mb-4 handwriting text-sm sm:text-base">
                {t("stats.title")}
            </h4>
            <div class="space-y-2 sm:space-y-3">
                <div class="flex items-center justify-between">
                    <span
                        class="text-xs sm:text-sm text-muted-foreground flex items-center gap-2"
                    >
                        <svg
                            class="h-3 w-3 sm:h-4 sm:w-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                            ></path>
                        </svg>
                        {t("stats.totalPosts")}
                    </span>
                    <span class="text-xs sm:text-sm font-medium text-foreground"
                        >{totalPosts}</span
                    >
                </div>
                <div class="flex items-center justify-between">
                    <span
                        class="text-xs sm:text-sm text-muted-foreground flex items-center gap-2"
                    >
                        <svg
                            class="h-3 w-3 sm:h-4 sm:w-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                            ></path>
                        </svg>
                        {t("stats.joinedDate")}
                    </span>
                    <span class="text-xs sm:text-sm font-medium text-foreground"
                        >{joinedDate}</span
                    >
                </div>
                <div class="flex items-center justify-between">
                    <span
                        class="text-xs sm:text-sm text-muted-foreground flex items-center gap-2"
                    >
                        <svg
                            class="h-3 w-3 sm:h-4 sm:w-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                            ></path>
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        {t("stats.location")}
                    </span>
                    <span class="text-xs sm:text-sm font-medium text-foreground"
                        >{t("stats.locationValue")}</span
                    >
                </div>
            </div>
        </div>
    </div>



  
</div>
