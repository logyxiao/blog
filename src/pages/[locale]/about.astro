---
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import Header from "../../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";
import { useTranslations, languages } from "../../lib/i18n";
import AboutHeroImage from "../../assets/loading.gif";

export async function getStaticPaths() {
    return Object.keys(languages).map((locale) => ({
        params: { locale },
    }));
}

const { locale } = Astro.params;
const lang = (locale as keyof typeof languages) || "zh-cn";
const t = useTranslations(lang);
---

<!doctype html>
<html lang={lang}>
    <head>
        <BaseHead
            title={`${t("nav.about")} - ${SITE_TITLE}`}
            description={SITE_DESCRIPTION}
        />
    </head>
    <body>
        <Header />
        <main class="container mx-auto px-4 py-8 lg:py-12">
            <div class="max-w-4xl mx-auto">
                <!-- 主要内容 -->
                <div class="grid md:grid-cols-3 gap-6 lg:gap-8">
                    <!-- 左侧：个人介绍 -->
                    <div class="md:col-span-2 space-y-6 order-2 md:order-1">
                        <div class="paper-card p-4 sm:p-6">
                            <h2 class="text-xl sm:text-2xl font-bold mb-4 text-foreground">
                                {t("about.intro.title")}
                            </h2>
                            <div class="prose prose-gray max-w-none">
                                <p
                                    class="text-muted-foreground leading-relaxed mb-4 text-sm sm:text-base"
                                >
                                    {t("about.intro.p1")}
                                </p>
                                <p
                                    class="text-muted-foreground leading-relaxed mb-4 text-sm sm:text-base"
                                >
                                    {t("about.intro.p2")}
                                </p>
                                <p
                                    class="text-muted-foreground leading-relaxed text-sm sm:text-base"
                                >
                                    {t("about.intro.p3")}
                                </p>
                            </div>
                        </div>

                        <!-- 技能和兴趣 -->
                        <div class="paper-card p-4 sm:p-6">
                            <h2 class="text-xl sm:text-2xl font-bold mb-4 text-foreground">
                                {t("about.skills.title")}
                            </h2>
                            <div class="space-y-4 sm:grid sm:grid-cols-2 sm:gap-4 sm:space-y-0">
                                <div>
                                    <h3
                                        class="text-base sm:text-lg font-semibold mb-2 text-foreground"
                                    >
                                        {t("about.skills.tech")}
                                    </h3>
                                    <div class="flex flex-wrap gap-2">
                                        {
                                            [
                                                "React",
                                                "Vue",
                                                "TypeScript",
                                                "Node.js",
                                                "Python",
                                                "Docker",
                                            ].map((skill) => (
                                                <span class="px-2 sm:px-3 py-1 bg-surface text-muted-foreground rounded-full text-xs sm:text-sm border border-border">
                                                    {skill}
                                                </span>
                                            ))
                                        }
                                    </div>
                                </div>
                                <div>
                                    <h3
                                        class="text-base sm:text-lg font-semibold mb-2 text-foreground"
                                    >
                                        {t("about.skills.interests")}
                                    </h3>
                                    <div class="flex flex-wrap gap-2">
                                        {
                                            t("about.skills.interestsList")
                                                .split(",")
                                                .map((interest) => (
                                                    <span class="px-2 sm:px-3 py-1 bg-surface text-muted-foreground rounded-full text-xs sm:text-sm border border-border">
                                                        {interest.trim()}
                                                    </span>
                                                ))
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 右侧：信息卡片 -->
                    <div class="space-y-4 sm:space-y-6 order-1 md:order-2">
                        <!-- 基本信息 -->
                        <div class="paper-card p-4 sm:p-6">
                            <h3 class="text-base sm:text-lg font-bold mb-4 text-foreground">
                                {t("about.info.title")}
                            </h3>
                            <div class="space-y-3">
                                <div class="flex items-center space-x-3">
                                    <svg
                                        class="w-4 h-4 sm:w-5 sm:h-5 text-muted-foreground flex-shrink-0"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                        ></path>
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                                        ></path>
                                    </svg>
                                    <span class="text-muted-foreground text-sm sm:text-base"
                                        >{t("about.info.location")}</span
                                    >
                                </div>
                                <div class="flex items-center space-x-3">
                                    <svg
                                        class="w-4 h-4 sm:w-5 sm:h-5 text-muted-foreground flex-shrink-0"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0H8m8 0v2a2 2 0 01-2 2H10a2 2 0 01-2-2V6"
                                        ></path>
                                    </svg>
                                    <span class="text-muted-foreground text-sm sm:text-base"
                                        >{t("about.info.job")}</span
                                    >
                                </div>
                                <div class="flex items-center space-x-3">
                                    <svg
                                        class="w-4 h-4 sm:w-5 sm:h-5 text-muted-foreground flex-shrink-0"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                                        ></path>
                                    </svg>
                                    <span class="text-muted-foreground text-sm sm:text-base"
                                        >{t("about.info.experience")}</span
                                    >
                                </div>
                            </div>
                        </div>

                        <!-- 联系方式 -->
                        <div class="paper-card p-4 sm:p-6">
                            <h3 class="text-base sm:text-lg font-bold mb-4 text-foreground">
                                {t("about.contact.title")}
                            </h3>
                            <div class="space-y-3">
                                <a
                                    href="mailto:logyxiao@gmail.com"
                                    class="flex items-center space-x-3 text-muted-foreground hover:text-foreground transition-colors p-2 -mx-2 rounded-lg hover:bg-surface min-h-[44px]"
                                >
                                    <svg
                                        class="w-4 h-4 sm:w-5 sm:h-5 flex-shrink-0"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                        ></path>
                                    </svg>
                                    <span class="text-sm sm:text-base">{t("about.contact.email")}</span>
                                </a>
                                <a
                                    href="https://github.com/logyxiao"
                                    class="flex items-center space-x-3 text-muted-foreground hover:text-foreground transition-colors p-2 -mx-2 rounded-lg hover:bg-surface min-h-[44px]"
                                >
                                    <svg
                                        class="w-4 h-4 sm:w-5 sm:h-5 flex-shrink-0"
                                        fill="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                                        ></path>
                                    </svg>
                                    <span class="text-sm sm:text-base">GitHub</span>
                                </a> 
                                <a
                                    href="https://twitter.com/logyxiao"
                                    class="flex items-center space-x-3 text-muted-foreground hover:text-foreground transition-colors p-2 -mx-2 rounded-lg hover:bg-surface min-h-[44px]"
                                >
                                    <svg
                                        class="w-4 h-4 sm:w-5 sm:h-5 flex-shrink-0"
                                        fill="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
                                        ></path>
                                    </svg>
                                    <span class="text-sm sm:text-base">Twitter</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- 底部区域 -->
                <div class="text-center mb-8 lg:mb-12 mt-8 lg:mt-12">
                    <img
                        src={AboutHeroImage.src}
                        alt={t("about.heroAlt")}
                        class="w-32 h-32 sm:w-48 sm:h-48 lg:w-60 lg:h-60 rounded-full mx-auto mb-6 object-cover"
                    />
                </div>
            </div>
        </main>
        <Footer />
    </body>
</html>
